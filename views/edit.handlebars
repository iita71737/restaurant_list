<div class="editpage">
    <form action="/restaurants/{{ rest._id}}/edit" method="POST">
                    <div class="form-group ">
                        <label for="exampleInput1">餐廳中文名稱</label>
                        <input type="text" class="form-control" id="exampleInput1" aria-describedby="emailHelp" placeholder="輸入中文名稱..."
                            name="name" value="{{ rest.name }}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳英文名稱(選填)</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="Enter English Name..." name="name_en" value="{{ rest.name_en}}">
                    </div>
                    <div class="form-group">
                        <label for="inputState">餐廳類型</label>
                        <select id="inputState" class="form-control" name="category">
                            <option selected>Choose...</option>
                            <option>日式</option>
                            <option>中東</option>
                            <option>義式</option>
                            <option>美式</option>
                            <option>酒吧</option>
                            <option>咖啡</option>
                            <option>小吃</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">上傳餐廳圖片</label>
                        <input type="file" id="file-uploader" data-target="file-uploader" accept="image/*" multiple="multiple"
                            name="image" value="{{ rest.image}}"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳地址</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="輸入餐廳地址..." name="location" value="{{ rest.location}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">連絡電話</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="輸入連絡電話..." name="phone" value="{{ rest.phone}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳GoogleMap位址</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="Enter GoogleMap ..." name="google_map" value="{{ rest.google_map}}"> 
                    </div>
                    <div class="form-group">
                        <div>
                            <label for="exampleInput2">評比分數</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rating" id="inlineRadio1" value="5">
                            <label class="form-check-label" for="inlineRadio1">5</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rating" id="inlineRadio2" value="4">
                            <label class="form-check-label" for="inlineRadio2">4</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rating" id="inlineRadio3" value="3" disabled>
                            <label class="form-check-label" for="inlineRadio3">3</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">餐廳描述</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="descripction" >{{rest.description}}</textarea>
                    </div>
                
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                
                </form>
</div>