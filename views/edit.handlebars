<div class="editpage">
    <form action="/rests/{{ rest._id}}?_method=PUT" method="POST">
                    <div class="form-group ">
                        <label for="exampleInput1">餐廳中文名稱</label>
                        <input type="text" class="form-control" id="exampleInput1" aria-describedby="emailHelp" placeholder="輸入中文名稱..."
                            name="name" value="{{ rest.name }}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳英文名稱(選填)</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="Enter English Name..." name="name_en" value="{{ rest.name_en}}">
                    </div>
                    <div class="form-group">
                        <label for="inputState">餐廳類型</label>
                        <select id="inputState" class="form-control" name="category">
                            <option selected>Choose...</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>日式</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>中東</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>義式</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>美式</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>酒吧</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>咖啡</option>
                            <option {{#if rest.category }} SELECTED {{/if}}>小吃</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">上傳餐廳圖片</label>
                        <input type="file" id="file-uploader" data-target="file-uploader" accept="image/*" multiple="multiple"
                            name=""/>
                            <input type="hidden" name="image"
                                value="https://wowlavie-aws.hmgcdn.com/file/article_all/%E5%A4%A9%E7%AB%BA%E9%BC%A0%E8%BB%8A%E8%BB%8A006.jpg" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳地址</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="輸入餐廳地址..." name="location" value="{{ rest.location}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">連絡電話</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="輸入連絡電話..." name="phone" value="{{ rest.phone}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput2">餐廳GoogleMap位址</label>
                        <input type="text" class="form-control" id="exampleInput2" placeholder="Enter GoogleMap ..." name="google_map" value="{{ rest.google_map}}"> 
                    </div>
                    <div class="form-group">
                        <div class="editrating">
                            <label for="customRange1">評比分數</label>
                            <input type="range" class="range-rgb-ragint" min="0" max="5" step="0.1" name="rating" value="{{ rest.rating}}" >
                            <input type="number" class="form-control rgb-rating-text" placeholder="4.5" value="{{ rest.rating}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">餐廳描述</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" >{{rest.description}}</textarea>
                    </div>
                
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                
                </form>
</div>